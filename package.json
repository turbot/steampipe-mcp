{
  "name": "@turbot/steampipe-mcp",
  "version": "0.1.1",
  "description": "Steampipe MCP server to query cloud infrastructure, SaaS, code and more with SQL using AI.",
  "license": "Apache-2.0",
  "author": "Turbot HQ, Inc",
  "homepage": "https://github.com/turbot/steampipe-mcp",
  "bugs": "https://github.com/turbot/steampipe-mcp/issues",
  "type": "module",
  "bin": {
    "mcp-server-steampipe": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/index.js",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "watch": "tsc --watch",
    "start": "node dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ai",
    "cnapp",
    "cspm",
    "mcp",
    "mcp-server",
    "security",
    "steampipe",
    "turbot-pipes"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "ajv": "^8.17.1",
    "pg": "^8.11.3",
    "pg-types": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/pg": "^8.11.2",
    "shx": "^0.3.4",
    "typescript": "^5.6.2"
  }
}
